        <label class="label">Message</label>
        <div class="control">
            <textarea id="message" name="message"
                      class="textarea" placeholder="Textarea" data-model="message">
            </textarea>
        </div>
    </div>

    <div class="field is-grouped">
        <div class="control">
            <button
                    class="button is-link"
