{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | Messenger{% endblock %}

{% block body %}
    <section class="section">
        <h1 class="title is-1">Mercure</h1>
        <div class="columns">
            <div class="column is-one-third">
                <div class="card">
                    <div class="card-content">
                        <div class="content">
                            {{ component('MatchLive', {
                                topic: path('mercure_index'),
                            }) }}

                        </div>
                    </div>
                </div>
            </div>
            <div class="column">
                <div id="mercure" data-controller="mercure"
                     data-mercure-topic-value="/fr/this-is-topic">
                    <div data-mercure-target="mercureContainer" class="bg-light p-5 rounded">

                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
